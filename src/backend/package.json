{
  "name": "@epa/backend",
  "version": "1.0.0",
  "description": "Backend services for the Enhanced Prior Authorization System",
  "private": true,
  "workspaces": [
    "api-gateway",
    "auth-service",
    "workflow-service",
    "document-service",
    "ai-service",
    "integration-service"
  ],
  "scripts": {
    "prepare": "husky install",
    "start": "cross-env NODE_ENV=production npm run start --workspaces --if-present",
    "dev": "cross-env NODE_ENV=development npm run dev --workspaces --if-present",
    "build": "npm run clean && npm run build --workspaces --if-present",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "npm run clean --workspaces --if-present && rimraf node_modules"
  },
  "devDependencies": {
    "@jest/globals": "^29.0.0",
    "@jest/types": "^29.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.40.0",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "nock": "^13.3.0",
    "nodemon": "2.0.x",
    "prettier": "^2.8.0",
    "rimraf": "^5.0.0",
    "supertest": "^6.3.0",
    "ts-jest": "^29.0.0",
    "ts-node": "10.x",
    "tsconfig-paths": "4.x",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "auth0": "^3.3.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "express-jwt": "^8.4.0",
    "express-rate-limit": "^6.7.0",
    "helmet": "^7.0.0",
    "http-errors": "^2.0.0",
    "http-proxy-middleware": "^2.0.6",
    "ioredis": "^5.3.0",
    "jsonwebtoken": "^9.0.0",
    "jwks-rsa": "^3.0.0",
    "mongoose": "^7.0.0",
    "morgan": "^1.10.0",
    "rate-limiter-flexible": "^2.4.1",
    "redis": "^4.0.0",
    "saml2-js": "^3.0.0",
    "winston": "^3.8.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "author": "EPA System Team",
  "license": "UNLICENSED"
}