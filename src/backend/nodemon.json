{
  "watch": [
    "api-gateway/src",
    "auth-service/src",
    "workflow-service/src", 
    "document-service/src",
    "ai-service/src",
    "integration-service/src",
    "shared"
  ],
  "ext": ".ts,.js,.json",
  "ignore": [
    "**/*.test.ts",
    "**/*.spec.ts", 
    "**/*.e2e-spec.ts",
    "**/*.d.ts",
    "node_modules",
    "dist",
    "coverage",
    "logs",
    "tmp"
  ],
  "exec": "ts-node -r tsconfig-paths/register",
  "verbose": true,
  "restartable": "rs",
  "env": {
    "NODE_ENV": "development",
    "TS_NODE_PROJECT": "tsconfig.json"
  },
  "delay": "1000",
  "legacyWatch": false,
  "signal": "SIGTERM"
}