# Enhanced Prior Authorization System - Environment Configuration
# Version: 1.0.0

# API Configuration
# Base URL for the backend API services
VITE_API_BASE_URL=http://localhost:8080

# API version for endpoint versioning
VITE_API_VERSION=v1

# API request timeout in milliseconds (30 seconds)
VITE_API_TIMEOUT=30000

# Auth0 Configuration
# Auth0 tenant domain (must be HTTPS)
VITE_AUTH0_DOMAIN=your-tenant.auth0.com

# Auth0 application client ID (min 32 characters)
VITE_AUTH0_CLIENT_ID=your-client-id

# Auth0 API audience URL (must be HTTPS)
VITE_AUTH0_AUDIENCE=https://api.epa-system.com

# OAuth scopes for authentication
VITE_AUTH0_SCOPE=openid profile email

# Authentication callback URL
VITE_AUTH0_REDIRECT_URI=http://localhost:3000/callback

# Post-logout redirect URL
VITE_AUTH0_LOGOUT_URI=http://localhost:3000

# Role configuration namespace (must be HTTPS)
VITE_ROLE_NAMESPACE=https://api.epa.com/roles

# Application Environment
# Possible values: development, staging, production
VITE_APP_ENV=development

# Security Settings
# Session timeout in minutes
VITE_SESSION_TIMEOUT=30

# Feature Flags
VITE_ENABLE_MFA=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DOCUMENT_UPLOAD=true

# API Rate Limiting
VITE_API_RATE_LIMIT=1000
VITE_API_RATE_LIMIT_WINDOW=60000

# Monitoring and Logging
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true